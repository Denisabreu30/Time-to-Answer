
<!DOCTYPE html>
<html>
<h1><%= t('messages.listing', model: @admins.model_name.human(count: 2)) %></h1>
<br>
<head>
 <meta charset="utf-8" />
<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
</style>
</head>
  <body>

    <table>
      <tr>
        <th>#</th>
        <th><%= translate_attribute(@admins, :email) %> </th>
        <th>
        <%= link_to new_admins_backoffice_admin_path do %>
        <i class="btn btn-success"><%= t('button.admin.btn_add') %> </i>
        <% end %>
        </th>
      </tr>
      <% @admins.each do |admin| %>
        <tr>
          <td><%= admin.id %></td>
          <td><%= admin.email %></td>
          <td style="width: 190px" >
          
            <%= link_to edit_admins_backoffice_admin_path (admin) do %>
             <i class="btn btn-primary" ><%= t('button.admin.btn_edit') %></i>
            <% end %>
            
            <%= link_to admins_backoffice_admin_path(admin), method: :delete,
                data: {confirm: t('messages.confirm_with', item: [admin.email.truncate(15)]) } do %>
              <i class="btn btn-danger" ><%= t('button.admin.btn_delete') %></i>
            <% end %>

           
          </td>
        </tr>
      <% end %>
    </table>
    
   <%= will_paginate @admins, list_classes: %w(pagination justify-content-center), previous_label:  '&laquo;', next_label:  '&raquo;' %>  
      
  </body>
</html>   