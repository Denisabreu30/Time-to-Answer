
<!DOCTYPE html>
<html>
<h1><%= t('messages.listing', model: @subjects.model_name.human(count: 2)) %></h1>
<br>
<head>
 <meta charset="utf-8" />
<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
</style>
</head>
  <body>

    <table>
      <tr>
        <th>#</th>
        <th><%= translate_attribute(@subjects, :description) %> </th>
        <th>
        <%= link_to new_admins_backoffice_subject_path do %>
        <i class="btn btn-success"><%= t('button.subject.btn_add') %></i>
        <% end %>
        </th>
      </tr>
      <% @subjects.each do |subject| %>
        <tr>
          <td><%= subject.id %></td>
          <td><%= subject.description %></td>
          <td style="width: 190px" >
          
            <%= link_to edit_admins_backoffice_subject_path (subject) do %>
             <i class="btn btn-primary" ><%= t('button.subject.btn_edit') %></i>
            <% end %>
            
            <%= link_to admins_backoffice_subject_path(subject), method: :delete,
                data: {confirm: t('messages.confirm_with', item: [subject.description.truncate(15)]) } do %>
                <i class="btn btn-danger" ><%= t('button.subject.btn_delete') %></i>
            <% end %>

           
          </td>
        </tr>
      <% end %>
    </table>
    
   <%= will_paginate @subjects, list_classes: %w(pagination justify-content-center), previous_label:  '&laquo;', next_label:  '&raquo;' %>  
      
  </body>
</html>   