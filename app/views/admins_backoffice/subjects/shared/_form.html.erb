<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <br><br>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#"><%= action_message %></a>
      </div>
    </nav>

    <% if @subject.errors.any? %>
        <div class="alert  alert-danger alert-dismissible">
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          <ul>
            <% @subject.errors.full_messages.each do |message| %>
              <li> <%= message %> </li>
            <% end %>
          </ul>
        </div>
    <% end %>
    

    <%= form_with(model: [ :admins_backoffice, @subject ], local: true) do |form| %>

      <div class="mb-3 mt-3">
        <%= form.label :description %>
        <%= form.text_field :description, class:"form-control", placeholder: t('placeholder.subject_description') %>
      </div>

      <button type="submit" class="btn btn-primary"><%= t('button.subject.btn_save') %></button>
    <% end %>
  </head>
</html>