
            
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Login Administrativo</h3></div>
                <div class="card-body">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <div class="form-floating mb-3">
                            <%= f.email_field :email, autofocus: true, placeholder:"EndereÃ§o email", class:"form-control" %>
                            <label for="inputEmail">Email address</label>
                        </div>

                        <div class="form-floating mb-3">
                          <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
                          <label for="inputPassword">Password</label>
                        </div>


                        <% if devise_mapping.rememberable? %>
                            <label>
                            <%= f.check_box :remember_me %> Lembrar-me
                            </label>
                        <% end %>

                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                           <%= f.submit "Entrar", class:"btn btn-primary" %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
            
